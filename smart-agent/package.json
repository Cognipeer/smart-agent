{
  "name": "@cognipeer/smart-agent",
  "version": "0.1.1",
  "description": "Composable LangGraph-based smart agent with message-based tool turns and built-in model/tool helpers.",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
  "import": "./dist/index.js",
  "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --clean --sourcemap",
    "dev": "tsup src/index.ts --format esm,cjs --dts --watch",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
  "prepare": "npm run build",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "@langchain/core": "^0.3.0",
    "@langchain/langgraph": "^0.2.0"
  },
  "dependencies": {
    "@langchain/openai": "^0.6.11",
    "@langchain/mcp-adapters": "^0.6.0",
    "nanoid": "^5.0.7",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.5.4",
    "@typescript-eslint/eslint-plugin": "^8.5.0",
    "@typescript-eslint/parser": "^8.5.0",
    "eslint": "^9.9.0",
    "tsx": "^4.16.2",
    "tsup": "^8.1.0",
    "typescript": "^5.5.4"
  }
}
